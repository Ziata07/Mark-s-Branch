        class Player
        {
            public int Number;
            public int X = 0;
            public int Y = 0;
        }
        enum PlayerMovement
        {
            arrowUp,
            arrowDown,
            arrowLeft,
            arrowRight,
            win
        }

        class BoardTile
        {
            public PlayerMovement Direction;
            public bool IsCheese;

            public BoardTile(PlayerMovement direction, bool isCheese = false)
            {
                Direction = direction;
                IsCheese = isCheese;
            }
        }

        

